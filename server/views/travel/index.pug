extends ../layout/index
block content
    main.container.mt-5
        .row
            .col-md-5
                img(src=`/img/destiny_${travel.image}_ln.jpg`, class = 'img-fluid')
            .col-md-7
                h1 #{travel.title}
                p   
                    i.fas.fa-calendar-alt
                    | Dep. Date: #{travel.departure_date} / Arr. Date: #{travel.arrival_date}
                p   
                    i.fas.fa-dollar-sign
                    |     #{travel.price} USD
                p   
                    i.fas.fa-users
                    |     #{travel.available}
                p= travel.description