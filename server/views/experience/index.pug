extends ../layout/index
block content
    main.container.mt-5
        h1.text-center.mb-5 #{page}


        .row 
            .col-md-12
                include ../layout/partials/experience
                
            .col-md-12
                h2.text-center Add an experience
                if(errors)
                    each error in errors
                        .alert.alert-danger.text-center=error.message
                .row.justify-content-center
                    .col-md-8
                        form(action = '/experience', method = 'POST')
                            .form-group
                                label(for = 'name') Name
                                input(id = 'name', class = 'form-control' type = 'text', placeholder = 'Your name..', name = 'name', value = name)
                            .form-group
                                label(for = 'mail') E-mail
                                input(id = 'mail', class = 'form-control' type = 'email', placeholder = 'Your e-mail..', name = 'mail', value = mail)
                            .form-group
                                label(for = 'message') Message
                                textarea#message(name = 'message', class = 'form-control', rows = '3', placeholder = 'Your message..')=message
                            input.btn.btn-success.btn-block(type = 'submit')